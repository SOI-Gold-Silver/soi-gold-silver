                        <i class="fas fa-shopping-cart"></i> Add to Cart
                    </button>
                </div>
            </div>
        </section>
    </div>

    <footer class="footer" id="contact">
        <p>&copy; 2024 SOI Gold and Silver - Sands of Iowa. All rights reserved.</p>
        <p>Contact us: info@soigoldandsilver.com</p>
    </footer>

    <script>
        // Live price update simulation
        function updatePrices() {
            const metals = ['gold', 'silver', 'copper'];
            const basePrices = { gold: 2721.50, silver: 32.85, copper: 3.85 };
            
            metals.forEach(metal => {
                const variation = (Math.random() - 0.5) * 20;
                const newPrice = basePrices[metal] + variation;
                const change = (Math.random() - 0.5) * 5;
                const changePercent = (change / basePrices[metal] * 100).toFixed(2);
                
                document.getElementById(`${metal}-price`).textContent = `$${newPrice.toFixed(2)}`;
                
                const changeElement = document.getElementById(`${metal}-change`);
                const changeClass = change >= 0 ? 'positive' : 'negative';
                const changeSymbol = change >= 0 ? '+' : '';
                
                changeElement.className = `change ${changeClass}`;
                changeElement.textContent = `${changeSymbol}${change.toFixed(2)} (${changeSymbol}${changePercent}%)`;
            });
            
            document.getElementById('last-update').textContent = new Date().toLocaleTimeString();
        }

        // Update prices every 30 seconds
        setInterval(updatePrices, 30000);
        
        // Initial update
        updatePrices();

        // Add to cart functionality
        document.querySelectorAll('.btn-add-to-cart').forEach(button => {
            button.addEventListener('click', function() {
                this.innerHTML = '<i class="fas fa-check"></i> Added to Cart';
                this.style.background = '#28a745';
                setTimeout(() => {
                    this.innerHTML = '<i class="fas fa-shopping-cart"></i> Add to Cart';
                    this.style.background = 'linear-gradient(45deg, #b87333, #cd853f)';
                }, 2000);
            });
        });
    </script>
</body>
</html>
