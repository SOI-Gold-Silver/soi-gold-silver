<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SOI Gold and Silver - Sands of Iowa Precious Metals</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
            line-height: 1.6;
        }

        .header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 1rem 0;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 2rem;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: bold;
            color: #d4af37;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .nav-menu {
            display: flex;
            list-style: none;
            gap: 2rem;
        }

        .nav-menu a {
            text-decoration: none;
            color: #333;
            font-weight: 600;
            transition: color 0.3s ease;
            padding: 0.5rem 1rem;
            border-radius: 25px;
        }

        .nav-menu a:hover {
            color: #d4af37;
            background: rgba(212, 175, 55, 0.1);
        }

        .live-prices {
            background: linear-gradient(45deg, #d4af37, #f4e4bc);
            color: #333;
            padding: 1rem;
            text-align: center;
            margin-top: 80px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .price-ticker {
            display: flex;
            justify-content: center;
            gap: 3rem;
            flex-wrap: wrap;
        }

        .price-item {
            background: rgba(255, 255, 255, 0.9);
            padding: 1rem 2rem;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            min-width: 200px;
        }

        .metal-name {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .price {
            font-size: 1.5rem;
            font-weight: bold;
            color: #d4af37;
        }

        .change {
            font-size: 0.9rem;
            margin-top: 0.25rem;
        }

        .positive { color: #28a745; }
        .negative { color: #dc3545; }

        .hero {
            text-align: center;
            padding: 4rem 2rem;
            color: white;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.5);
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        .cta-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            padding: 1rem 2rem;
            border: none;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(45deg, #d4af37, #f4e4bc);
            color: #333;
            box-shadow: 0 4px 15px rgba(212, 175, 55, 0.4);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 2px solid white;
            backdrop-filter: blur(10px);
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        }

        .features {
            padding: 4rem 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .features h2 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 3rem;
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .feature-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .feature-card {
            background: rgba(255, 255, 255, 0.95);
            padding: 2rem;
            border-radius: 20px;
            text-align: center;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            transition: transform 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-10px);
        }

        .feature-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #d4af37;
        }

        .feature-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #333;
        }

        .footer {
            background: rgba(0, 0, 0, 0.8);
            color: white;
            text-align: center;
            padding: 2rem;
            margin-top: 4rem;
        }

        .last-updated {
            font-size: 0.8rem;
            color: #666;
            margin-top: 0.5rem;
        }

        @media (max-width: 768px) {
            .nav-menu {
                flex-direction: column;
                gap: 1rem;
            }
            
            .hero h1 {
                font-size: 2rem;
            }
            
            .price-ticker {
                gap: 1rem;
            }
            
            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="nav-container">
            <div class="logo">
                <i class="fas fa-coins"></i> SOI Gold & Silver
            </div>
            <nav>
                <ul class="nav-menu">
                    <li><a href="index.html"><i class="fas fa-home"></i> Home</a></li>
                    <li><a href="gold.html"><i class="fas fa-circle" style="color: #d4af37;"></i> Gold</a></li>
                    <li><a href="silver.html"><i class="fas fa-circle" style="color: #c0c0c0;"></i> Silver</a></li>
                    <li><a href="copper.html"><i class="fas fa-circle" style="color: #b87333;"></i> Copper</a></li>
                    <li><a href="#contact"><i class="fas fa-envelope"></i> Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="live-prices">
        <div class="price-ticker">
            <div class="price-item">
                <div class="metal-name">
                    <i class="fas fa-circle" style="color: #d4af37;"></i> Gold
                </div>
                <div class="price" id="gold-price">$2,721.50</div>
                <div class="change positive" id="gold-change">+12.30 (+0.45%)</div>
            </div>
            <div class="price-item">
                <div class="metal-name">
                    <i class="fas fa-circle" style="color: #c0c0c0;"></i> Silver
                </div>
                <div class="price" id="silver-price">$32.85</div>
                <div class="change negative" id="silver-change">-0.15 (-0.45%)</div>
            </div>
            <div class="price-item">
                <div class="metal-name">
                    <i class="fas fa-circle" style="color: #b87333;"></i> Copper
                </div>
                <div class="price" id="copper-price">$3.85</div>
                <div class="change positive" id="copper-change">+0.08 (+2.12%)</div>
            </div>
        </div>
        <div class="last-updated">Last updated: <span id="last-update">Just now</span></div>
    </div>

    <section class="hero">
        <h1>Sands of Iowa Gold & Silver</h1>
        <p>Your trusted source for precious metals investment. Discover our premium selection of gold, silver, and copper bullion products with live market pricing updated every 30 seconds.</p>
        <div class="cta-buttons">
            <a href="gold.html" class="btn btn-primary">
                <i class="fas fa-coins"></i> View Gold Products
            </a>
            <a href="silver.html" class="btn btn-secondary">
                <i class="fas fa-coins"></i> View Silver Products
            </a>
            <a href="copper.html" class="btn btn-secondary">
                <i class="fas fa-coins"></i> View Copper Products
            </a>
        </div>
    </section>

    <section class="features">
        <h2>Why Choose SOI Gold & Silver?</h2>
        <div class="feature-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3>Live Market Prices</h3>
                <p>Real-time precious metals pricing updated every 30 seconds to ensure you get the most current market rates.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Secure Investment</h3>
                <p>Physical precious metals provide tangible wealth protection and portfolio diversification for smart investors.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-star"></i>
                </div>
                <h3>Premium Quality</h3>
                <p>All our bullion products are sourced from reputable mints and refineries with guaranteed purity and authenticity.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <h3>Fast Shipping</h3>
                <p>Secure, insured shipping with tracking for all orders. Your precious metals arrive safely at your doorstep.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-handshake"></i>
                </div>
                <h3>Expert Support</h3>
                <p>Our knowledgeable team is here to help you make informed investment decisions and answer your questions.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-tags"></i>
                </div>
                <h3>Competitive Pricing</h3>
                <p>Fair and transparent pricing with competitive premiums over spot prices for all our bullion products.</p>
            </div>
        </div>
    </section>

    <footer class="footer" id="contact">
        <p>&copy; 2024 SOI Gold and Silver - Sands of Iowa. All rights reserved.</p>
        <p>Contact us: info@soigoldandsilver.com</p>
    </footer>

    <script>
        // Live price update simulation
        function updatePrices() {
            const metals = ['gold', 'silver', 'copper'];
            const basePrices = { gold: 2721.50, silver: 32.85, copper: 3.85 };
            
            metals.forEach(metal => {
                const variation = (Math.random() - 0.5) * 20;
                const newPrice = basePrices[metal] + variation;
                const change = (Math.random() - 0.5) * 5;
                const changePercent = (change / basePrices[metal] * 100).toFixed(2);
                
                document.getElementById(`${metal}-price`).textContent = `$${newPrice.toFixed(2)}`;
                
                const changeElement = document.getElementById(`${metal}-change`);
                const changeClass = change >= 0 ? 'positive' : 'negative';
                const changeSymbol = change >= 0 ? '+' : '';
                
                changeElement.className = `change ${changeClass}`;
                changeElement.textContent = `${changeSymbol}${change.toFixed(2)} (${changeSymbol}${changePercent}%)`;
            });
            
            document.getElementById('last-update').textContent = new Date().toLocaleTimeString();
        }

        // Update prices every 30 seconds
        setInterval(updatePrices, 30000);
        
        // Initial update
        updatePrices();
    </script>
</body>
</html>
